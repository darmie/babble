def counter = () -> (
    def c = 0

    () -> (
        c = c + 1
    )
)

def c = counter()
def c2 = counter()

assert(c() == 1)
assert(c() == 2)
assert(c() == 3)
assert(c() == 4)
assert(c() == 5)
assert(c() == 6)
assert(c() == 7)
assert(c() == 8)
assert(c() == 9)

assert(c2() == 1)
assert(c2() == 2)
assert(c2() == 3)